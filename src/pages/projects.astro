---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <div id="top-center">
    <a class="bg-black border text-3xl" href="/">ü°ê Back</a>
  </div>
  <div
    class="flex flex-wrap justify-between pt-20 lg:pt-0 lg:px-20 w-screen items-center"
  >
    <div id="container" class="min-h-screen lg:pt-60 flex flex-col gap-2"></div>
  </div>
</BaseLayout>
<style>
  @key

</style>
<script>
  import { projects } from "@/projects";
  // console.log(projects)
  const container = document.getElementById("container");
  for (const project of projects) {
    const div = document.createElement("div");
    div.classList.add("p-2", "border");
    div.innerHTML = `
      <h1 class="text-3xl">${project.name}</h1>
      <p>${project.description}</p>
      <a href="${project.link}" target="_blank" class="text-teal-400 hover:underline py-2">${project.link}</a>
    `;
    container.appendChild(div);
  }
</script>
<style>
  #top-center {
    position: fixed;
    z-index: 99;
    top: 4rem;
    left: 50%;
    transform: translateX(-50%) perspective(1000px) rotateX(30deg);
  }
  #top-center a {
    padding: 1rem 2rem;
    transition: all 0.2s;
  }
  #top-center:hover a {
    opacity: 0.5;
  }
</style>
